@{
    ViewData["Title"] = "Welcome to Transfer Buddy";
}

<h2>@ViewData["Title"]</h2>

<p>Transfer Buddy is a simple Facebook messenger chat bot that allows users transfer money via TransferWise at the best rates :-)</p>

<p>
    <!--<a href="https://m.me/1825547597664373/">
        <img src="/images/facebook-messenger.png" alt="Facebook Messenger" width="300" height="100">
    </a>-->
</p>

<div>
 @if (User?.Identity?.IsAuthenticated ?? false) {
        <h1>Welcome, @User.Identity.Name</h1>

        <p>
            @foreach (var claim in Context.User.Claims) {
                <div>@claim.Type: <b>@claim.Value</b></div>
            }
        </p>
        
        <a class="btn btn-lg btn-danger" href="/signout?returnUrl=%2F">Sign out</a>
    }

    else {
        <a class="btn btn-lg btn-success" href="/signin?returnUrl=%2F">Sign in</a>
    }
</div>